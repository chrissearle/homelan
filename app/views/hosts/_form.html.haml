= simple_form_for(@host, :html => {:class => 'form-horizontal' }) do |f|
  = f.input :description
  = f.input :ethernet_mac, :label => "Mac address (eth)"
  = f.input :wlan_mac, :label => "Mac address (wifi)"
  = f.input :ip_address, :label => "IPv4 Address (eth)"
  = f.input :wlan_ip_address, :label => "IPv4 Address (wlan)"
  = f.input :dhcp_flag, :label => "DHCP Allocated?"
  = f.input :active_flag, :label => "Active?"
  = f.button :submit
